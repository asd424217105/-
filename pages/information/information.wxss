/* information.wxss */
.headimg{
  width: 100%;
  height: 120rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items:center;
  justify-content: space-between;
  background-color: #ffffff;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}
.headimg text{
  font-size: 30rpx;
  color: #666666;
}
.headimg image{
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}
.personal-item{
  width: 100%;
  height: 80rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  background-color: #ffffff;
}
.personal-box{
  width: 100%;
  height: 79rpx;
  display: flex;
  align-items:center;
  justify-content: space-between;
  border-bottom: 1rpx solid #cccccc;
}
.nobottom{
  border-bottom: none;
}
.personal-box text{
  font-size: 30rpx;
  color: #666666;
}
.personal-box .personal-data{
  font-size: 24rpx;
  color: #999999;
}

.btnbox{
  display: flex;
}
.next-btn{
  font-size: 34rpx;
  margin-top: 50rpx;
  margin-bottom: 44rpx;
  width: 500rpx;
  height: 68rpx;
  line-height: 68rpx;
  background-color: #0077c1;
  color: #ffffff;
}