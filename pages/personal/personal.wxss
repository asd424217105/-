/* personal.wxss */
.personal{
  display: flex;
  height: 120rpx;
  width: 100%;
  background-color: #ffffff;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  align-items:center;
}
.headimg{
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.message{
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  line-height: 50rpx;
  font-family: "黑体";
}
.name{
  font-size: 30rpx;
  color: #000000;
}
.data{
  font-size: 24rpx;
  color: #9A9A9A;
}
.setitem{
  width: 100%;
  height: 82rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  background-color: #ffffff;
}
.setbox{
  display: flex;
  width: 100%;
  height: 82rpx;
  align-items:center;
  position:relative;
  border-top: 1rpx solid #cccccc;
}
.setbox2{
  border-top: 1rpx solid #cccccc;
}
.smallicon{
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}
.setword{
  font-size: 30rpx;
  font-family: "黑体";
}




.right{
    position:absolute;
    right:35rpx;
}
.massage{
    position:absolute;
    right:-18rpx;
    top:-15rpx;
    background:red;
    border-radius:50%;
    width:30rpx;
    height:30rpx;
    text-align: center;
    font-size: 20rpx;
    line-height: 30rpx;
    color:#fff;
}