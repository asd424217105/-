/* pay.wxss */

.section{
    width:100%;
    height:150rpx;
    margin:40rpx 0;
    background:#fff;
}
.textarea{
    width:100%;
    height:100%;
    padding-left:25rpx;
    color:#666;
    font-size:30rpx;
    box-sizing: border-box;
}



.voucher-box{
  width: 100%;
  box-sizing: border-box;
  padding-left: 22rpx;
  background-color: #ffffff;
}
.voucher-title{
  line-height: 76rpx;
  font-size: 30rpx;
  color: #666666;
}
.voucher{
  display: flex;
  flex-wrap: wrap ;
}
.upload{
  width: 155rpx;
  height: 155rpx;
  border: 1rpx dashed #CBCBCB;
  margin-bottom:20rpx;
  margin-right: 20rpx;
  position: relative;
}
.uploadimg{
  width: 155rpx;
  height: 155rpx;
}
.close{
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  top: -14rpx;
  right: -14rpx;
}
.tj-btn{
  width: 600rpx;
  height: 72rpx;
  line-height: 72rpx;
  background-color: #0077c1;
  color: #ffffff;
  position: absolute;
  bottom: 200rpx;
  left:50%;
  margin-left:-300rpx;
}
