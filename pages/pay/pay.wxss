/* pay.wxss */
.pay-box{
  width: 100%;
  box-sizing: border-box;
  padding-left: 22rpx;
  padding-right: 22rpx;
  background-color: #ffffff;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}
.pay-list{
  display: flex;
  align-items: center;  
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
  font-size: 30rpx;
  color: #666666;
  border-bottom: 1rpx solid #cccccc;
}
.pay-list2{
  border-bottom: none;
}
.pay-list2 text:nth-child(2){
  color: #CD2626;
}
.name{
  color: #333333;
  text-align: right;
  width: 450rpx;
}
.picker{
  line-height: 80rpx;
  min-width: 100rpx;
}
.voucher-box{
  width: 100%;
  box-sizing: border-box;
  padding-left: 22rpx;
  background-color: #ffffff;
}
.voucher-title{
  line-height: 76rpx;
  font-size: 30rpx;
  color: #666666;
}
.voucher{
  display: flex;
  flex-wrap: wrap ;
}
.upload{
  width: 155rpx;
  height: 155rpx;
  border: 1rpx dashed #CBCBCB;
  margin-bottom:20rpx;
  margin-right: 20rpx; 
  position: relative;
}
.uploadimg{
  width: 155rpx;
  height: 155rpx;
}
.close{
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  top: -14rpx;
  right: -14rpx;
}
.tj-btn{
  width: 600rpx;
  height: 72rpx;
  line-height: 72rpx;
  background-color: #0077c1;
  color: #ffffff;
  position: absolute;
  left: 75rpx;
  bottom: 200rpx;
}
