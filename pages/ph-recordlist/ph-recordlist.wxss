/* newuser.wxss */
.container{
  padding-top: 1rpx;
}
.company-item{
  display: flex;
  align-items:center;
  justify-content: space-between;
  width: 100%;
  background-color: #ffffff;
  border-bottom: 1rpx solid #cccccc;
  box-sizing: border-box;
  padding: 25rpx 20rpx;
  min-height: 130rpx;
}
.companyname{
  width: 453rpx;
  color: #666666;
}
.companytime{
  display: flex;
  flex-direction:column;
}
.level{
  margin-bottom: 14rpx;
  color: #333333;
  text-align: right;
}
.time{
  color: #999999;
}
.load {
  background-color: #fff;
  width: 100%;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 30rpx;
  color: #999;
}
/* 页面无数据时页面展示 */
.notitems{
  margin-top: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction:column;
}
.notitems image{
  width: 474rpx;
  height: 368rpx;
  margin-bottom: 40rpx;
}
.notitems .notmessage{
  font-size: 44rpx;
  color: #cccccc;
}