/* ph-newuser.wxss */
.container{
  padding-top: 1rpx;
}
.company-item{
  display: flex;
  align-items:center;
  justify-content: space-between;
  width: 100%;
  background-color: #ffffff;
  border-bottom: 1rpx solid #cccccc;
  box-sizing: border-box;
  padding: 25rpx 20rpx;
  min-height: 120rpx;
}

/* 搜索框 */
.search{
  border: 2rpx solid #ccc;
  width: 80%;
  height: 60rpx;
  border-radius: 30rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  color: #666;
  font-size: 26rpx;
  background-color: #F7F7F7;
}
.search-btn{
  height: 56rpx;
  line-height: 56rpx;
  background: #ABCAF1;
  box-shadow: 0rpx 4rpx 10rpx #ABCAF1;
  padding: 0rpx 20rpx;
  color: #fff;
  border-radius: 16rpx;
}


.companyname{
  width: 453rpx;
  color: #666666;
}
.companytime{
  display: flex;
  flex-direction:column;
}
.level{
  margin-bottom: 14rpx;
  color: #333333;
  text-align: right;
}
.time{
  color: #999999;
}

.load {
  background-color: #fff;
  width: 100%;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 30rpx;
  color: #999;
}
/* 页面无数据时页面展示 */
.notitems{
  margin-top: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction:column;
}
.notitems image{
  width: 474rpx;
  height: 368rpx;
  margin-bottom: 40rpx;
}
.notitems .notmessage{
  font-size: 44rpx;
  color: #cccccc;
}